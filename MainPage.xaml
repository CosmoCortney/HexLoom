<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HexLoom.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:custom="clr-namespace:HexEditor;assembly=HexEditor"
    xmlns:local="clr-namespace:HexLoom">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem
                x:Name="MenuItemNewProject"
                Clicked="onNewProjectMenuItemClicked"
                Text="New Project" />
            <MenuFlyoutItem
                x:Name="MenuItemChangeSettings"
                Clicked="onChangeSettingsMenuItemClicked"
                IsEnabled="False"
                Text="Project Settings" />
            <MenuFlyoutItem
                x:Name="MenuItemSaveChanges"
                Clicked="onSaveProjectClicked"
                IsEnabled="False"
                Text="Save Changes" />
            <MenuFlyoutItem
                x:Name="MenuItemOpenProject"
                Clicked="onOpenProjectClicked"
                Text="Open Project" />
            <MenuFlyoutItem
                x:Name="MenuItemGenerate"
                Clicked="onGenerateOutputFileClicked"
                IsEnabled="False"
                Text="Generate Output File" />
            <MenuFlyoutItem
                x:Name="MenuItemCloseProject"
                Clicked="onProjectCloseClicked"
                IsEnabled="False"
                Text="Close Project" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <Grid
        x:Name="OuterGrid"
        ColumnDefinitions=".3*, Auto, Auto, Auto, Auto"
        RowDefinitions=".05*, *">

        <Grid
            x:Name="GroupsGrid"
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            ColumnDefinitions="0.2*, 0.133*, 0.2*, 0.133*, 0.2*, 0.133*"
            RowDefinitions="Auto, .95*">

            <Label
                Grid.Row="0"
                Grid.Column="0"
                FontSize="20"
                HorizontalOptions="Center"
                Text="Entities"
                TextColor="{StaticResource HexLoomTextColor}" />

            <Button
                x:Name="ButtonAddGroup"
                Grid.Row="0"
                Grid.Column="2"
                Clicked="onAddGroupClicked"
                HorizontalOptions="Fill"
                IsEnabled="False"
                Text="Add Group"
                TextColor="{StaticResource HexLoomTextColor}"
                VerticalOptions="Center" />

            <Button
                x:Name="ButtonApply"
                Grid.Row="0"
                Grid.Column="4"
                Clicked="onApplyClicked"
                HorizontalOptions="Fill"
                IsEnabled="False"
                Text="Apply"
                TextColor="{StaticResource HexLoomTextColor}"
                VerticalOptions="Center" />

            <ScrollView
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="6"
                BackgroundColor="#444444">

                <VerticalStackLayout
                    x:Name="EntityGroupStack"
                    Padding="10"
                    Spacing="10">
                    <!--  Group items will be added during runtime  -->
                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <BoxView
            x:Name="MainFramesSeparator"
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="{StaticResource FrameBorder}"
            VerticalOptions="Fill"
            WidthRequest="2" />

        <Label
            x:Name="LabelOriginal"
            Grid.Row="0"
            Grid.Column="2"
            FontSize="20"
            HorizontalOptions="Center"
            Text="Original"
            TextColor="{StaticResource HexLoomTextColor}" />
        <custom:HexEditor
            x:Name="HexEditorOriginal"
            Grid.Row="1"
            Grid.Column="2"
            _FontSize="12" />

        <BoxView
            x:Name="MainFramesSeparator2"
            Grid.Row="1"
            Grid.Column="3"
            BackgroundColor="{StaticResource FrameBorder}"
            VerticalOptions="Fill"
            WidthRequest="2" />

        <Label
            x:Name="LabelEdited"
            Grid.Row="0"
            Grid.Column="4"
            FontSize="20"
            HorizontalOptions="Center"
            Text="Edited"
            TextColor="{StaticResource HexLoomTextColor}" />
        <custom:HexEditor
            x:Name="HexEditorEdited"
            Grid.Row="1"
            Grid.Column="4"
            _FontSize="12"
            _ShowAddressArea="False" />

    </Grid>
</ContentPage>
